{
  "name": "exit-intent",
  "version": "1.0.0",
  "description": "The source code for Exit Intent.com",
  "main": "app.coffee",
  "dependencies": {
    "assetwatcher": "^1.3.4",
    "body-parser": "^1.14.0",
    "closure-compiler-service": "^0.6.1",
    "coffee-script": "^1.10.0",
    "compression": "^1.5.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "emailjs": "^0.3.16",
    "express": "^4.13.3",
    "express-debug": "^1.1.1",
    "express-force-ssl": "^0.3.0",
    "express-session": "^1.11.3",
    "fireworm": "^0.7.0",
    "foreach-cli": "^1.0.1",
    "jade": "^1.11.0",
    "jstransformer": "0.0.4",
    "jstransformer-coffee-script": "^1.0.0",
    "jstransformer-markdown": "^1.1.0",
    "mongodb": "^2.1.6",
    "monkii": "^1.1.5",
    "node-sass": "^3.4.2",
    "passport": "^0.3.0",
    "passport-local": "^1.0.0",
    "redis": "^2.4.2",
    "simplyimport": "^1.2.2",
    "ua-parser-js": "^0.7.10",
    "uglify-js": "^2.6.2"
  },
  "devDependencies": {
    "forever": "^0.15.1"
  },
  "scripts": {
    "compile": "npm run compile:js && npm run compile:sass",
    "compile:js": "foreach -g 'src/coffee/*.coffee' -x 'simplyimport -i #{path} | coffee -b -s -c > dist/js/#{name}.pretty.js && uglifyjs dist/js/#{name}.pretty.js -m -c keep_fargs,unused=false -o dist/js/#{name}.js'",
    "compile:sass": "foreach -g 'src/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output dist/css/'",
    "compile:sass:pretty": "foreach -g 'src/sass/*.sass' -x 'node-sass --functions ./sass-fns.js -x --output-style nested #{path} --output dist/css/'",
    "watch": "npm run watch:js & npm run watch:sass",
    "watch:js": "assetwatcher -d 'src/coffee/' -e 'coffee' -i '**/_plugins/*' '**/_tinymce/*' -x 'simplyimport -i #{path} | coffee -b -s -c > dist/js/#{name}.pretty.js && uglifyjs dist/js/#{name}.pretty.js -m -c keep_fargs,unused=false > dist/js/#{name}.js'",
    "watch:sass": "assetwatcher -d 'src/sass/' -e 'sass' -i '**/_plugins/*' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed #{path} --output dist/css/'",
    "updatedeps": "npm run updatedeps:gv",
    "updatedeps:gv": "cp -f dist/* ~/Projects/getvoip/gv_main/wp-content/plugins/getvoip-campaign/assets/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/exit-intent.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/exit-intent/issues"
  },
  "homepage": "https://github.com/danielkalen/exit-intent#readme"
}
